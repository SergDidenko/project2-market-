{% extends '_main.twig' %}
{% block content %}
	<form action="" method="POST" class="form-horizontal" role="form">
			<div class="form-group">
				<legend>{{ title }}</legend>
			</div>
				<div class="form-group">
					<label for="inputUsername" class="col-sm-2 control-label">Username:</label>
					<div class="col-sm-10">
						<input type="text" name="username" id="inputUsername" class="form-control" value="{{ username }}" title="">
						<span class="form-error">
							{% for e in err_obj.username %}
							    {{ e }}
							{% endfor %}
						</span>
					</div>
				</div>
			{% if button != "Update" %}
				<div class="form-group">
					<label for="inputPassword" class="col-sm-2 control-label">Password:</label>
					<div class="col-sm-10">
						<input type="password" name="password" id="inputPassword" class="form-control" title="">
						<span class="form-error">
							{% for e in err_obj.password %}
							    {{ e }}
							{% endfor %}
						</span>
					</div>
				</div>
			{% endif %}
			{% if user == "root" %}
			<div class="radio">
				<label>
					<input type="radio" name="admin" id="inputAdmin" value="admin" checked="checked">
					Admin
				</label>
			</div>
				<div class="radio">
				<label>
					<input type="radio" name="admin" id="inputAdmin" value="user">
					User
				</label>
			</div>
			{% endif %}
			<div class="form-group">
				<div class="col-sm-10 col-sm-offset-2">
					<button type="submit" class="btn btn-primary">{{ button }}</button>
				</div>
			</div>
	</form>
{% endblock %}